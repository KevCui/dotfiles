for_window [class="feh"] floating enable
for_window [class="Wine"] floating enable
for_window [class="Viewnior"] floating enable
for_window [class="Peek"] stacking enable

# Volume
bindsym XF86AudioRaiseVolume exec "pamixer -i 5;notify-send -u low `pamixer --get-volume`"
bindsym $mod+equal exec "pamixer -i 5;notify-send -u low `pamixer --get-volume`"
bindsym XF86AudioLowerVolume exec "pamixer -d 15;notify-send -u low `pamixer --get-volume`"
bindsym $mod+minus exec "pamixer -d 15;notify-send -u low `pamixer --get-volume`"
bindsym XF86AudioMute exec "pamixer -t;notify-send -u low `amixer get Master | awk '$0~/%/{print $6}' | tr -d '[]'`"
bindsym $mod+0 exec "pamixer -t;notify-send -u low `amixer get Master | awk '$0~/%/{print $6}' | tr -d '[]'`"

# Brightness
bindsym XF86MonBrightnessUp exec "brightnessctl -d intel_backlight set 10%+"
bindsym XF86MonBrightnessDown exec "brightnessctl -d intel_backlight set 10%-"

# Rotate screen
bindsym $mod+Control+Shift+Up exec "xrandr --output eDP-1 --rotate normal"
bindsym $mod+Control+Shift+Down exec "xrandr --output eDP-1 --rotate inverted"
bindsym $mod+Control+Shift+Left exec "xrandr --output eDP-1 --rotate left"
bindsym $mod+Control+Shift+Right exec "xrandr --output eDP-1 --rotate right"

