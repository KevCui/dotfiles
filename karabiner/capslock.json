{
    "title": "Capslock Enhancement",
    "author": "Kevcui",
    "homepage": "",
    "hostpage": "",
    "manual": "",
    "import_url": "",
    "rules": [
        {
            "description": "CapsLock to Esc when press & to Control when hold",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "net.kovidgoyal.kitty",
                                "io.alacritty",
                                "org.virtualbox.app.VirtualBox",
                                "org.virtualbox.app.VirtualBoxVM"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_gui"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
