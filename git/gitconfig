[core]
    pager = delta --theme=iceberg
[interactive]
    diffFilter = delta --color-only
[diff]
    tool = vimdiff
[difftool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
