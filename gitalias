[alias]
    a = add
    b = branch
    c = commit
    ca = commit --amend
    cm = commit -m
    co = checkout
    d = diff
    df = ! git diff --name-only | fzf -m --ansi --preview-window=right:80 --preview 'git diff {} | delta' --bind=tab:down,btab:up,ctrl-j:up,ctrl-k:down,change:top,alt-space:toggle,ctrl-a:select-all,ctrl-u:deselect-all,alt-k:preview-down,alt-j:preview-up,alt-h:preview-page-down,alt-l:preview-page-up --cycle
    dfs = ! git diff --name-only --cached | fzf -m --ansi --preview-window=right:80 --preview 'git diff --cached {} | delta' --bind=tab:down,btab:up,ctrl-j:up,ctrl-k:down,change:top,alt-space:toggle,ctrl-a:select-all,ctrl-u:deselect-all,alt-k:preview-down,alt-j:preview-up,alt-h:preview-page-down,alt-l:preview-page-up --cycle
	diff = difftool
    dump = cat-file -p
    ff = "! sh -c \"git log --follow --pretty=format:'%h %ad %s%d' --date=short $1 | fzf --preview 'git diff-tree -p {1} | delta' --bind=tab:down,btab:up,ctrl-j:up,ctrl-k:down,change:top,alt-space:toggle,ctrl-a:select-all,ctrl-u:deselect-all,alt-k:preview-down,alt-j:preview-up,alt-h:preview-page-down,alt-l:preview-page-up --cycle\" -"
    h = log --pretty=format:'%Cgreen%h%Creset %C(yellow)%ad%Creset | %s%d [%an]' --graph --date=short
    i = init
    l = log
    lf = ! git log --pretty=format:'%h %ad %s%d' --date=short | fzf --preview 'git diff-tree -p {1} | delta' --bind=tab:down,btab:up,ctrl-j:up,ctrl-k:down,change:top,alt-space:toggle,ctrl-a:select-all,ctrl-u:deselect-all,alt-k:preview-down,alt-j:preview-up,alt-h:preview-page-down,alt-l:preview-page-up --cycle
    m = merge
    p = push
    P = push origin
    pll = pull
    rst = reset --
    rsthard = reset --hard origin/master
    s = status
    type = cat-file -t
    undo = checkout --
